{
  "variable": {
    "TAG": {
      "default": "latest"
    }
  },
  "group": {
    "default": {
      "targets": ["bedrock"]
    }
  },
  "target": {
    "bedrock": {
      "context": ".",
      "dockerfile": "build/Dockerfile",
      "tags": [
        "ghcr.io/amirhnajafiz/bedrock-tracer:${TAG}",
        "ghcr.io/amirhnajafiz/bedrock-tracer:latest"
      ],
      "output": ["type=registry"]
    }
  }
}
